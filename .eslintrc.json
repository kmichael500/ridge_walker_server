{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "prettier",
        "eslint-config-prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars":"off", // causes issues with string enums.
        "@typescript-eslint/no-unused-vars": ["warn"], // typescript version wroks
        "no-shadow": "off", // also causes issues
        "@typescript-eslint/no-shadow": ["error"], // typescript version wroks
        "no-console":"warn",
        "valid-jsdoc": ["error", { "prefer": { "arg": "param", "argument": "param", "class": "constructor", "return": "returns", "virtual": "abstract" } }]
    }
}
